{{#each product}}
<section class="product-section d-flex row">
  <div class="image-view-main col-md-6 p-0">
    <div class="image-section row d-flex ms-0" >
      <div class="image-list mt-5 col-md-2 ">
        <ul class="sm-image-list">
          {{#each this.Images}}
          <li  class="mt-3  list-unstyled sm-img-li"><img class="imgSm" style="width: 60px; height:60px;"
              src="/images/uploads/{{this}}" alt="">
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="image-view col-6" >
        <div class="center-image">
        <img class="imgLg" src="/images/uploads/{{this.Images.[0]}}" alt="">
        </div>
      </div>
    </div>
    <div class="button-div-buy row d-flex justify-content-center">
      <button product-id="{{_id}}" class="btn addCart btn-outline-secondary me-3  col-3" ><i class="fa-solid fa-cart-shopping"></i> Add to cart</button>
      {{!-- <a class="btn btn-outline-secondary me-3  col-3" href="">Add to Cart</a> --}}
      <a href="" class="btn btn-dark   col-3"> <i class="fa-solid fa-bolt"></i>Buy Now</a>
    </div>
  </div>
  <div class="product-info col-md-5">
    <h4 class="fs-1">{{Name}} {{Features.Processor}}-{{Features.RAM}}/{{Features.Storage}}/{{Features.Operating_system}}
    </h4>
    <p class="h1 fw-bold mt-5"><i class="fa-solid fa-indian-rupee-sign"></i>{{Price}}</p>
    <p class=" text-uppercase mt-3">product Description</p>
    <p>{{Description}}</p>
    <p class=" text-uppercase fw-semibold mt-5">specifications</p>
    <table class="table table-dark table-striped ">
      <tbody class="ms-3">
        <tr>
          {{!-- <td></td> --}}
          <td>RAM</td>
          <td>{{Features.RAM}}</td>
        </tr>
        <tr>
          {{!-- <td></td> --}}
          <td>intenal storage</td>
          <td>{{Features.Storage}}</td>
        </tr>
        <tr>
          {{!-- <td></td> --}}
          <td>operating system</td>
          <td>{{Features.Storage}}</td>
        </tr>
        <tr>
          {{#if Features.Processor}}
          {{!-- <td></td> --}}
          <td>Processor</td>
          <td>{{Features.Processor}}</td>
          {{/if}}
        </tr>
           <tr>
          {{!-- <td></td> --}}
          <td>Color</td>
          <td>{{Features.Color}}</td>
        </tr>
      </tbody>
    </table>
  </div>

</section>
{{/each}}
<div>
  {{>user-footer}}
</div>
<script src="/javascripts/productView.js"></script>